		<name>Секретный ключ</name>
	</settings>
	<settings>
		<variable>yandex_api_paymode</variable>
		<name>Выбор способа оплаты</name>
		<options>
			<name>На стороне Кассы</name>
			<value>kassa</value>
		</options>
		<options>
			<name>На стороне магазина</name>
			<value>site</value>
		</options>
	</settings>
