		<options>
			<name>Заплатить по частям</name>
			<value>installments</value>
		</options>
	</settings>
	<settings>
		<variable>ya_kassa_api_send_check</variable>
		<name>Отправлять в Яндекс.Кассу данные для чеков (54-ФЗ)</name>
		<options>
			<name>Включить</name>
			<value>1</value>
		</options>
        <options>
            <name>Выключить</name>
            <value>0</value>
        </options>
